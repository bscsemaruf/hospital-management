generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  needPasswordChange Boolean
  role UserRole
  status UserStatus
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  admin Admin?
@@map("users")
}

model Admin {
  id String @id @default(uuid())
  email String @unique
  profilePhoto String?
  contactNumber String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

user User @relation(fields: [email], references: [email])
  @@map("admins")

}

enum UserRole {
    SUPER_ADMIN
    ADMIN
    DOCTOR
    PATIENT
}

enum UserStatus {
  ACTIVE
  BLOCKED
}